# GCP Project Configuration
PROJECT_ID=your-gcp-project-id
REGION=us-central1

# Cloud Storage Buckets
INPUT_BUCKET=your-project-id-media-input
OUTPUT_BUCKET=your-project-id-media-output

# Speech-to-Text Configuration
SPEECH_MODEL=long
MIN_SPEAKER_COUNT=2
MAX_SPEAKER_COUNT=6
LANGUAGE_CODE=en-US

# Vertex AI Configuration (for situation classification)
VERTEX_AI_ENDPOINT_ID=your-endpoint-id
VERTEX_AI_LOCATION=us-central1

# Firestore Configuration (optional)
FIRESTORE_COLLECTION=media-results

# BigQuery Configuration (optional)
BIGQUERY_DATASET=media_intelligence
BIGQUERY_TABLE=transcripts

# Logging
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true

# Cost Controls
MAX_AUDIO_DURATION_MINUTES=480
ENABLE_COST_ESTIMATION=true

# Processing Configuration
SEGMENT_DURATION_SECONDS=30
ENABLE_DIARIZATION=true
ENABLE_SITUATION_DETECTION=true

# Local Development
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
