# Media Intelligence Pipeline - Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# LOCAL DEPLOYMENT (CPU-only containerized pipeline)
# ==============================================================================

# HuggingFace Token (required for speaker diarization)
# Get your token at: https://huggingface.co/settings/tokens
# You must also accept the terms at: https://huggingface.co/pyannote/speaker-diarization-3.1
HUGGINGFACE_TOKEN=

# Processing Configuration
# Number of CPU threads for processing
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4

# Model cache directory (inside container)
TRANSFORMERS_CACHE=/root/.cache/huggingface

# Default Whisper model (tiny, tiny.en, base, base.en, small, small.en, medium, medium.en)
DEFAULT_MODEL=base.en

# Default compute type (int8, float16, float32)
DEFAULT_COMPUTE_TYPE=int8

# Default number of workers
DEFAULT_WORKERS=4

# Default language (en, auto for detection)
DEFAULT_LANGUAGE=en

# ==============================================================================
# GCP DEPLOYMENT (Cloud-native pipeline)
# ==============================================================================

# GCP Project Configuration
PROJECT_ID=your-gcp-project-id
REGION=us-central1

# Cloud Storage Buckets
INPUT_BUCKET=your-project-id-media-input
OUTPUT_BUCKET=your-project-id-media-output

# Speech-to-Text Configuration
SPEECH_MODEL=long
MIN_SPEAKER_COUNT=2
MAX_SPEAKER_COUNT=6
LANGUAGE_CODE=en-US

# Vertex AI Configuration (for situation classification)
VERTEX_AI_ENDPOINT_ID=your-endpoint-id
VERTEX_AI_LOCATION=us-central1

# Firestore Configuration (optional)
FIRESTORE_COLLECTION=media-results

# BigQuery Configuration (optional)
BIGQUERY_DATASET=media_intelligence
BIGQUERY_TABLE=transcripts

# Cost Controls
MAX_AUDIO_DURATION_MINUTES=480
ENABLE_COST_ESTIMATION=true

# Processing Configuration
SEGMENT_DURATION_SECONDS=30
ENABLE_DIARIZATION=true
ENABLE_SITUATION_DETECTION=true

# Local Development with GCP
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ==============================================================================
# COMMON SETTINGS
# ==============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
